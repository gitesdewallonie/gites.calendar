<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="gites">

<body>

<div metal:fill-slot="main">
  <h1>Configurer votre calendrier</h1>

      <form name="edit_form" method="post"
            enctype="multipart/form-data"
            class="enableUnloadProtection"
            action="">

        <div class="field">
          <span></span>
          <label class="formQuestion" for="title">Utilisation du calendrier</label>
          <span class="fieldRequired" title="Requis">(Requis)</span>

          <div class="formHelp" id="title_help"></div>
          <div class="fieldErrorBox"></div>
          <select name="usage">
            <option id="actif">Calendrier visible par tous (recherches et page d'hebergement)</option>
            <option id="actif">Calendrier visible pour recherches uniquement</option>
            <option id="actif">Calendrier non activ√©</option>
          </select>
        </div>
        <input class="context" type="submit"
               name="form.button.save"
               value="Enregistrer" />
    </form>

</div><!--div metal-->
</body>
</html>
